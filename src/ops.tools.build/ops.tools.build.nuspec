<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>Ops.Tools.Build</id>
        <version>$VersionSemantic$</version>
        <authors>$CompanyName$</authors>
        <owners>$CompanyName$</owners>
        <licenseUrl>$CompanyUrl$</licenseUrl>
        <projectUrl>$ProductUrl$</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>
            Provides the MsBuild script and standard configuration files that are used to execute the automated build, test and release stages for the Ops-Resource packages.
        </description>
        <releaseNotes>
            $ReleaseNotesHtmlEncoded$
        </releaseNotes>
        <dependencies>
            $Dependencies$
        </dependencies>
    </metadata>
    <files>
        <file
            src="$DirSrc$\ops.tools.build\scripts\*.msbuild"
            target="build" />
        <file
            src="$DirSrc$\ops.tools.build\scripts\*.props"
            target="build" />
        <file
            src="$DirSrc$\ops.tools.build\scripts\packages.config"
            target="build" />
        <file
            src="$DirSrc$\ops.tools.build\shared\*.props"
            target="build" />

        <file
            src="$DirSrc$\ops.tools.build\scripts\build\*.msbuild"
            target="build\build" />
        <file
            src="$DirSrc$\ops.tools.build\scripts\build\*.props"
            target="build\build" />

        <file
            src="$DirSrc$\ops.tools.build\scripts\test\*.msbuild"
            target="build\test" />
        <file
            src="$DirSrc$\ops.tools.build\scripts\test\*.props"
            target="build\test" />

        <file
            src="$DirSrc$\ops.tools.build\scripts\deploy\*.msbuild"
            target="build\deploy" />
        <file
            src="$DirSrc$\ops.tools.build\scripts\deploy\*.props"
            target="build\deploy" />

        <file
            src="$DirBin$\*.dll"
            target="build/extensions" />
        <file
            src="$DirBin$\*.targets"
            target="build/extensions" />

        <file
            src="$DirSrc$\ops.tools.build\transformations\**\*.*"
            target="build\transformations" />

        <file src="$DirWorkspace$\README.md" />
        <file src="$DirWorkspace$\LICENSE" />
    </files>
</package>
